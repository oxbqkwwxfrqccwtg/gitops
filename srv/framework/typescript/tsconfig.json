{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "outDir": "build/production",
    "baseUrl": "./",
    "paths": { "*": ["node_modules/*"] }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [ "node_modules", "**/*.test.ts" ],
  "ts-node": {
    "transpileOnly": false,
    "files": true,
    "compilerOptions": {
        "target": "ESNext",
        "types": ["node"]
    }
  }
}
